<Application x:Class="Khakimova_Katakhova_3ИСиП_222.App"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PracticalWork2"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Color x:Key="PrimaryColor">#FFB6C1</Color>
        <Color x:Key="SecondaryColor">#FF69B4</Color>
        <Color x:Key="BackgroundColor">#FFE4E1</Color>
        <Color x:Key="TextColor">#FF000000</Color>

        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    </Application.Resources>
</Application>
